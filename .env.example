# Jarv1s Configuration Template
# Copy this file to .env and configure your settings

# =============================================================================
# LLM Configuration (LM Studio)
# =============================================================================
LLM_API_BASE=http://localhost:1234/v1
LLM_MODEL_NAME=openai/lmstudio-local-model
LLM_API_KEY=not-required

# =============================================================================
# Speech-to-Text Configuration (Whisper)
# =============================================================================
WHISPER_MODEL=small
# Options: tiny, base, small, medium, large
# Recommendation: small (best balance of speed/accuracy)

# =============================================================================
# Text-to-Speech Configuration (Piper)
# =============================================================================
TTS_MODEL_PATH=models/tts/es_ES-sharvard-medium.onnx
TTS_CONFIG_PATH=models/tts/es_ES-sharvard-medium.onnx.json
TTS_SAMPLE_RATE=22050

# =============================================================================
# Server Configuration
# =============================================================================
HOST=127.0.0.1
PORT=8000
DEBUG=true
RELOAD=true

# =============================================================================
# Audio Configuration
# =============================================================================
AUDIO_SAMPLE_RATE=16000
AUDIO_CHANNELS=1
AUDIO_CHUNK_SIZE=1024

# =============================================================================
# Logging Configuration
# =============================================================================
LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

